# Kitchen Stack Environment Variables üîê
#
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control!
#
# Generate secrets with: openssl rand -base64 32

# =============================================================================
# Supabase Configuration
# =============================================================================

# PostgreSQL password (CHANGE THIS!)
POSTGRES_PASSWORD=your-super-secret-password

# JWT Secret for Supabase Auth (CHANGE THIS!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# Supabase API Keys
# Generate these from your JWT_SECRET or use Supabase CLI
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key

# JWT Expiry in seconds (default: 1 hour)
JWT_EXPIRY=3600

# =============================================================================
# URLs
# =============================================================================

# External URL for the API (used for auth callbacks)
API_EXTERNAL_URL=http://localhost:8000

# Frontend URL
SITE_URL=http://localhost:19006

# Additional OAuth redirect URLs (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# =============================================================================
# Auth Settings
# =============================================================================

# Disable public signups (invite-only)
DISABLE_SIGNUP=false

# Auto-confirm email addresses (skip verification)
ENABLE_EMAIL_AUTOCONFIRM=true

# Enable anonymous users
ENABLE_ANONYMOUS_USERS=false

# =============================================================================
# LLM Provider API Keys (Decision D6: Multi-Adapter)
# =============================================================================

# OpenAI
OPENAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Google (Gemini) - Primary for Vision (D2)
GOOGLE_API_KEY=
